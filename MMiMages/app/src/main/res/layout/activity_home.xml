<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flat_background"
    tools:context=".HomeActivity">

    <Space
        android:layout_width="1dp"
        android:layout_height="85dp"/>

    <ImageButton
        android:id="@+id/CamButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:height="@android:dimen/thumbnail_width"
        android:onClick="openCamera"
        android:src="@drawable/logo_camera"
        android:background="@drawable/btn_circular"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <Space
        android:layout_width="1dp"
        android:layout_height="50dp"/>

    <ImageButton
        android:id="@+id/UploadButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_upload"
        android:background="@drawable/btn_circular"
        android:layout_gravity="center"
        android:onClick="uploadPhoto"
        android:text="Upload Photo"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:layout_width="1dp"
        android:layout_height="50dp"/>

    <ImageButton
        android:id="@+id/MMButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/btn_circular"
        android:src="@drawable/logo_save"
        android:layout_gravity="center"
        android:onClick="viewModels"
        android:text="View MyModels"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />
</LinearLayout>